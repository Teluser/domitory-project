{% extends 'base.jinja2' %}
{% block title %}ITMO Domitory{% endblock %}
{% block script %}
<link rel="stylesheet" href="../static/css/auth.css">
{% endblock %}
{% block content %}


<div class="container col-md-9 col-sm-9 order-md-1" id="central">

    <main role="main">
        <div class="jumbotron card-signin">
            <h4 class=" card-title text-center text-uppercase">Sign in form</h4>
            <div id="errorMessage">

            </div>
            <form id="myForm" action="" method="POST" role="form">
                <div class="form-group">
                    <label for="subject" class="text-black">Name</label>
                    <input type="text" class="form-control card-signin  form-control-lg" id="subject" placeholder="Student name" title="Subject should contain more than one letter." name="name" required>
                </div>
                <div class="form-group" id="email-group">
                    <label for="email" class="text-black">Email address</label>
                    <input type="email" class="form-control card-signin  form-control-lg" id="email" placeholder="name@example.com" name="email" required>
                </div>
                <div class="form-group">
                    <label for="subject" class="text-black">Passport</label>
                    <input type="text" class="form-control card-signin  form-control-lg" id="subject" placeholder="C12345678" title="Subject should contain more than one letter." name="passport" required>
                </div>
                <h6 class="mb-3">Sex</h6>
                <div class="d-block my-3">
                    <div class="custom-control custom-radio">
                        <input id="credit" name="sex" value="Male" type="radio" class="custom-control-input" checked required>
                        <label class="custom-control-label" for="credit">Male</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input id="debit" name="sex" value="Male" type="radio" class="custom-control-input" required>
                        <label class="custom-control-label" for="debit">Female</label>
                    </div>

                </div>
                <div class="form-group ">
                    <label for="email" class="text-black">Telephone</label>
                    <input class="form-control card-signin  form-control-lg" type="tel" name="phone" placeholder="name@example.com" id="example-tel-input">

                </div>
                <div class="form-group ">
                    <label for="example-date-input" class="text-black">Date of Bird</label>
                    <input class="form-control card-signin  form-control-lg" type="date" name="dateofbird" placeholder="name@example.com" id="example-date-input">

                </div>
                <div class="form-group ">
                    <label for="example-number-input" class="text-black">Number Room</label>

                    <input class="form-control card-signin  form-control-lg" type="number" name="room" placeholder="name@example.com" id="example-number-input">

                </div>
                <div class="form-group ">
                    <label for="example-number-input" class="text-black">Number of contract</label>
                    <input class="form-control card-signin  form-control-lg" type="number" name="numofcontract" placeholder="name@example.com" id="example-number-input">

                </div>


                <div class="form-group ">
                    <label for="example-date-input" class="text-black">Start contract</label>
                    <input class="form-control card-signin  form-control-lg" type="date" name="dateofstart" placeholder="name@example.com" id="example-date-input">

                </div>
                <div class="form-group">
                    <label for="example-date-input" class="text-black">End contract</label>
                    <input class="form-control card-signin  form-control-lg" type="date" name="dateofend" placeholder="name@example.com" id="example-date-input">

                </div>
                <div class="form-group">
                    <label for="example-password-input" class="text-black">Password</label>
                    <input class="form-control card-signin  form-control-lg" type="password" placeholder="name@example.com" name="passwd" id="example-password-input">

                </div>
                <button type="submit" class="btn btn-lg btn-primary btn-block text-uppercase" name="enquire">Send</button>
            </form>
        </div>
    </main>
</div>

{% endblock %}